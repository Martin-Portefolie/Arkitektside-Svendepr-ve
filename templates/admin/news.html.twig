{% extends 'base.html.twig' %}

{% block title %}Håndther Nyheder{% endblock %}

{% block body %}
<div class="max-w-6xl mx-auto mt-10 bg-white p-6 rounded shadow">
    <h1 class="text-3xl font-bold text-gray-800">Håndther Nyheder</h1>

    <a href="{{ path('admin_news_create') }}" class="bg-green-600 text-white px-4 py-2 rounded shadow hover:bg-green-700 transition mt-4 inline-block">
        Opret Nyheder
    </a>

    <ul class="mt-6 space-y-4">
        {% for news in news %}
            <li class="p-4 bg-gray-100 rounded shadow flex justify-between items-center">
                <div>
                    <strong class="text-xl">{{ news.title }}</strong>
                </div>
                <div class="flex gap-4">
                    <a href="{{ path('admin_news_edit', {id: news.id}) }}" class="bg-blue-600 text-white px-4 py-2 rounded shadow hover:bg-blue-700 transition">
                        Rediger
                    </a>
                    <form action="{{ path('admin_news_delete', {id: news.id}) }}" method="post">
                        <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded shadow hover:bg-red-700 transition">
                            Slet
                        </button>
                    </form>
                </div>
            </li>
        {% else %}
            <p class="text-gray-600 mt-4"> N/A</p>
        {% endfor %}
    </ul>

    <a href="{{ path('admin_dashboard') }}" class="mt-6 inline-block text-red-600">Tilbage til Dashboard</a>
</div>
{% endblock %}
