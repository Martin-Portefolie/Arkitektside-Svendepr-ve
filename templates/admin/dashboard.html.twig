{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
<div class="max-w-6xl mx-auto mt-10 bg-white p-6 rounded shadow text-center">
    <h1 class="text-3xl font-bold text-gray-800">Admin Dashboard</h1>

    <div class="bg-red-500 text-white px-4 py-3 rounded mt-4">
        <p>Hey! Velkommen til admin</p>
    </div>

    <div class="mt-6 flex flex-col md:flex-row justify-center gap-6">
        <a href="{{ path('admin_news') }}" class="bg-red-600 text-white px-6 py-3 rounded shadow hover:bg-red-700 transition">
            Håndter Nyheder
        </a>
        <a href="{{ path('admin_project') }}" class="bg-red-600 text-white px-6 py-3 rounded shadow hover:bg-red-700 transition">
             Håndter Projekter
        </a>
    </div>

    <div class="mt-6">
        <form action="{{ path('app_logout') }}" method="post">
            <button type="submit" class="bg-gray-700 text-white px-6 py-3 rounded shadow hover:bg-gray-900 transition">
                Logud
            </button>
        </form>
    </div>
</div>
{% endblock %}
