{% extends 'base.html.twig' %}

{% block title %} Nyheder Dasboard {% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto mt-10 bg-white p-6 rounded shadow">
        <h2 class="text-2xl font-bold mb-4">
            {% if form.vars.value.id is defined %}
                Rediger nyheder
            {% else %}
                Opret nyheder
            {% endif %}
        </h2>

        {{ form_start(form) }}
        <div class="mb-4">
            {{ form_label(form.title) }}
            {{ form_widget(form.title, {'attr': {'class': 'w-full px-3 py-2 border rounded'}}) }}
            {{ form_errors(form.title) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.description) }}
            {{ form_widget(form.description, {'attr': {'class': 'w-full px-3 py-2 border rounded'}}) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.news) }}
            {{ form_widget(form.news, {'attr': {'class': 'w-full px-3 py-2 border rounded'}}) }}
            {{ form_errors(form.news) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.imageFile) }}
            {{ form_widget(form.imageFile, {'attr': {'class': 'w-full px-3 py-2 border rounded'}}) }}
            {{ form_errors(form.imageFile) }}
        </div>

        <div class="mb-4">
            <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700">
                Gem
            </button>
        </div>
        {{ form_end(form) }}

        <a href="{{ path('admin_news') }}" class="mt-4 inline-block text-red-600">Tilbage til nyheder</a>
    </div>
{% endblock %}